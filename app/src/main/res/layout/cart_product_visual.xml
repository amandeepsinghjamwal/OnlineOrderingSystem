<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/home_product_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/img"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/home_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Name"
                            android:maxLines="2"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:id="@+id/home_product_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:textSize="13dp"
                            android:text="â‚¹50000"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/desc"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        >

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:background="@drawable/square_bg"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="130dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/inc_button"
                    android:layout_width="40dp"
                    android:background="?android:selectableItemBackground"
                    android:layout_height="50dp"
                    android:src="@drawable/add_button"
                    android:textColor="@color/black"
                    android:textAllCaps="false"/>
            </LinearLayout>
            <TextView
                android:background="@drawable/bottom_style_home"
                android:id="@+id/productCount"
                android:layout_width="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_height="30dp"
                android:text="1"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginHorizontal="3dp"
                />
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/dec_button"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/remove_btn"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:textAllCaps="false"/>

        </LinearLayout>
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/removeFromCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/remove_shopping_cart"
            android:focusable="true"
            android:clickable="true"
            />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>